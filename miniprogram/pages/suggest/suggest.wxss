/* pages/suggest/suggest.wxss */
.suggest-wrapper {
    padding: 20rpx 20rpx 100rpx 20rpx;
    font-size: 30rpx;
}

.ttile {
    font-size: 36rpx;
    color: #aaa;
}

.title-require {
    color: red;
    padding-left: 10rpx;
}

.title-input {
    border-bottom: 1rpx solid #eee;
    height: 100rpx;
    padding: 10rpx;
    margin: 20rpx 0;
    box-sizing: border-box;
}

.content-wrapper {
    margin: 20rpx 0;
}

.content-area {
    width: 100%;
    border: 1rpx solid #eee;
    min-height: 500rpx;
    padding: 10rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
    margin: 10rpx 0;
}

.submit-btn {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #653BB7;
    font-size: 50rpx;
    color: #fff;
}