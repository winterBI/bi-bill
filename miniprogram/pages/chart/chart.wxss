/**index.wxss**/

/* 头部部分 */
.header {
  height: 350rpx;
  box-sizing: border-box;
  background: var(--main-color);
  color: #ffffff;
  padding: 50rpx 30rpx;
}
.top-left {
  color: var(--main-color);
  display: flex;
  align-items: flex-end;
}
.select-date {
  background: #ffffff;
  padding: 10rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
.date-img {
  width: 30rpx;
  height: 30rpx;
}
.date-text {
  padding: 0 10rpx;
  font-size: 28rpx;
  font-weight: 600;
}
.data-type {
  background: #fff;
  font-size: 24rpx;
  padding: 5rpx;
  border-radius: 10rpx;
}
.date-type-img {
    width: 30rpx;
    height: 30rpx;
}
.top-right {
  border-radius: 10rpx;
  border: 1rpx solid #ffffff;
  overflow: hidden;
}
.top-right .select {
  color: var(--main-color);
  background: #fff;
}
.top-right .no-select {
  color: #fff;
  background: var(--main-color);
}
.right-item {
  padding: 10rpx 30rpx;
}
.header-bottom {
  padding: 50rpx 0;
}
.header-amount {
  padding: 20rpx 0;
  font-size: 50rpx;
  font-weight: 700;
  letter-spacing: 4rpx;
}

/* 图表 */
.chart-wrapper {
  width: 100%;
  height: 500rpx;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}

.pie-canvas {
  width: 100%;
  height: 400rpx;
}
.chart-title {
  font-size: 36rpx;
  color: #000;
  height: 50rpx;
  padding: 0 20rpx;
}

/* 消费排行 */
.progress-box {
  padding: 20rpx;
}
.progress-wrapper {
  width: 100%;
  padding: 20rpx 0;
}
.progress-info {
  width: 150rpx;
}
.progress-img {
  width: 30rpx;
  height: 30rpx;
  padding: 10rpx;
  background: var(--main-light-color);
  border-radius: 40rpx;
  margin-right: 10rpx;
}
.progress-content {
  width: 300rpx;
}
.progress-amount {
  width: 200rpx;
  margin-left: 10rpx;
  text-align: end;
  padding-right: 20rpx;
}